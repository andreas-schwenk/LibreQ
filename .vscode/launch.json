{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "current PHP file",
      "type": "php",
      "request": "launch",
      "program": "${file}",
      "cwd": "${fileDirname}",
      "runtimeArgs": ["-dxdebug.mode=debug", "-dxdebug.start_with_request=yes"]
    },
    {
      "name": "LibreQ frontend",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:8271",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "LibreQ cron-screenshots.js",
      "program": "${workspaceFolder}/scripts/cron-screenshots.js",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "type": "node"
    }
  ]
}
